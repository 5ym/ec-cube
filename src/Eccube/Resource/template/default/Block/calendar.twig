{#{% form_theme form 'Form/form_div_layout.twig' %}#}
<br><br>
<div class="ec-role">
    <div>
        <div class="ec-secHeading">
            <span class="ec-secHeading__en">{{ 'front.block.calendar.title__en'|trans }}</span>
            <span class="ec-secHeading__line"></span>
            <span class="ec-secHeading__ja">{{ 'front.block.calendar.title__ja'|trans }}</span>
        </div>
        <table border="1">
            <tr>
                <th colspan="7">
                    <span>{{ ThisMonthTitle }}</span>
                </th>
            </tr>
            <tr>
                <th>日</th>
                <th>月</th>
                <th>火</th>
                <th>水</th>
                <th>木</th>
                <th>金</th>
                <th>土</th>
            </tr>
            <tr>
                {% for day in ThisMonthCalendar %}
                    <td>
                        {% if day.holiday == 1 %}
                            <span style="color:red">{{ day.day }}</span>
                        {% else %}
                            {{ day.day }}
                        {% endif %}
                    </td>
                    {% if loop.index % 7 == 0 %}
                        </tr><tr>
                    {% endif %}
                {% endfor %}
            </tr>
        </table>
        <br>
        <table border="1">
            <tr>
                <th colspan="7">
                    <span>{{ NextMonthTitle }}</span>
                </th>
            </tr>
            <tr>
                <th>日</th>
                <th>月</th>
                <th>火</th>
                <th>水</th>
                <th>木</th>
                <th>金</th>
                <th>土</th>
            </tr>
            <tr>
                {% for day in NextMonthCalendar %}
                <td>
                    {% if day.holiday == 1 %}
                        <span style="color:red">{{ day.day }}</span>
                    {% else %}
                        {{ day.day }}
                    {% endif %}
                </td>
                {% if loop.index % 7 == 0 %}
            </tr><tr>
                {% endif %}
                {% endfor %}
            </tr>
        </table>
    </div>
</div>
