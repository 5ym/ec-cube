{% if Product is defined %}
    <meta property="og:type" content="og:product" />
    <meta property="og:url" content="{{ url('product_detail', {'id': Product.id}) }}" />
    <link rel="canonical" href="{{ url('product_detail', {'id': Product.id}) }}" />
    <meta property="product:price:amount" content="{{ Product.getPrice02IncTaxMin }}"/>
    <meta property="product:price:currency" content="{{ eccube_config.currency }}"/>
    <meta property="product:product_link" content="{{ url('product_detail', {'id': Product.id}) }}"/>
    <meta property="product:retailer_title" content="{{ BaseInfo.shop_name }}"/>
{% elseif Category.id is defined %}
    <meta property="og:type" content="article" />
    <meta property="og:url" content="{{ url('product_list', {'category_id': Category.id}) }}" />
    <link rel="canonical" href="{{ url('product_list', {'category_id': Category.id}) }}" />
{% elseif Page is defined %}
    <meta property="og:type" content="{% if app.request.get('_route') == 'homepage' %}website{% else %}article{% endif %}" />
    <meta property="og:url" content="{{ url(Page.url) }}" />
    <link rel="canonical" href="{{ url(Page.url) }}" />
{% endif %}
<meta property="og:site_name" content="{{ BaseInfo.shop_name }}" />
