{
    "listeners": {
        "*:80": {
            "pass": "routes"
        }
    },
    "routes": [
        {
            "match": {
                "uri": [
                    "*.php",
                    "*.php/*"
                ]
            },
            "action": {
                "pass": "applications/app/direct"
            }
        },
        {
            "action": {
                "share": "/www/app$uri",
                "fallback": {
                    "pass": "applications/app/index"
                }
            }
        }
    ],
    "applications": {
        "app": {
            "type": "php 7.4",
            "targets": {
                "direct": {
                    "root": "/www/app/"
                },
                "index": {
                    "root": "/www/app/",
                    "script": "index.php"
                }
            }
        }
    }
}
